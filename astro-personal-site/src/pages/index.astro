---
// componenet script 
import Main from "../layouts/Main.astro";
const profilePicture = "https://i.imgur.com/JPGFE75.jpg";
---
<Main><!-- Content between the Main tags goes into Main's slot -->
	<div class="profile">
		<img 
		alt="Frau Katerina's website"  
		width="100px"
		height="100px"
		class="profile__picture"
		src={profilePicture}
		/>
		<div class="profile__details">
			<h1>Frau Katerina</h1>
			<h2>VP of Engineering at Goooogle</h2>
			<p>
				Helping developers be excellent and suceed at building scalable products.
			</p>
		</div>
	</div>
</Main>

<style>
	/* CSS as usual */
	.profile {
		display: flex;
		align-items: flex-start;
		flex-wrap: wrap;
		padding: 1rem 0 3rem 0;
	}

	.profile__details {
		flex: 1 0 300px;
	}

	.profile__details > h1 {
		margin-top: 0;
		color: red;
	}

	.profile__picture {
		border-radius: 50%;
		margin: 0 2rem 1rem 0;
	}
</style>